{% extends 'base.html.twig' %}

{% block title %}SchoolYear{% endblock %}

{% block body %}
    <h1>SchoolYear</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ school_year.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ school_year.name }}</td>
            </tr>
            <tr>
                <th>DateStart</th>
                <td>{{ school_year.dateStart ? school_year.dateStart|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>DateEnd</th>
                <td>{{ school_year.dateEnd ? school_year.dateEnd|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_TEACHER') %}
        <a href="{{ path('school_year_index') }}">back to list</a>

        <a href="{{ path('school_year_edit', {'id': school_year.id}) }}">edit</a>
    {% endif %}

    {% if is_granted('ROLE_ADMIN')%}    
        {{ include('school_year/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
